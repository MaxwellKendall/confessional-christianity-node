{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "lib": [
      "ES2021.String",
      "ES2022"
    ],
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["./index.ts", "./package.json"],
  "exclude": ["node_modules", "./test/**/*.ts"]
}
